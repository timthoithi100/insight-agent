# Example Terraform variables file
# Copy this file to terraform.tfvars and update the values

project_id = "your-gcp-project-id"
region     = "us-central1"

# Security settings
allow_public_access = false  # Set to true only if you want public access
authorized_service_account_email = "your-authorized-service-account@your-project.iam.gserviceaccount.com"

# Scaling settings
min_instances = 0
max_instances = 10

# Environment
environment = "production"

# Networking (optional)
enable_vpc_connector = false